<!DOCTYPE html>
<html>
  <head>
    <title>Cablest</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= include_gon %>
  </head>

  <body ng-app='croom'>
    <% flash.each do |k, v| %>
      <div class=<%= k %>> <%= v %> </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
